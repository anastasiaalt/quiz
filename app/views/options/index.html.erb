<h3>Options</h3>

<table>
  <tr>
    <th>Option Description</th>
    <th>Correct?</th>
    <th>Associated Question</th>
  </tr>

  <% @options.each do |option| %>
  <tr>
    <td><%= option.name %></td>
    <td><%= option.correct %></td>
    <td><%= option.question %></td>
    <td><a href="/options/<%= option.id %>/edit">Edit</td>
    <td><%= link_to 'Remove', option, :method=>:delete, :class=>:destroy, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>

</table>

<a href="/instructors/profile">Back to Instructor Dashboard</a>
<a href="/options/new">Create a New Option</a>
<a href="/questions/new">Create a New Question</a>

