<%= form_for @student do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :cohort_id %>
    <%= f.select :cohort_id, Cohort.all.collect {|cohort| [  cohort.name, cohort.id]}, {include_blank: false} %>
  </div>
  <div>
    <%= f.submit 'New Student Sign Up' %>
  </div>

<% end %>

